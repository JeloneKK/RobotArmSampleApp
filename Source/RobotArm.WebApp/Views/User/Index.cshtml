@model IEnumerable<RobotArm.WebApp.ViewModels.UserManagement.UserViewModel>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {userId = item.Id}) |
            @Html.ActionLink("Details", "Details", new {userId = item.Id}) |
            @* TODO: It should rather be done is separeted .js file  *@
            @Ajax.ActionLink("Delete", "Delete", new {userId = item.Id}, new AjaxOptions {HttpMethod = "POST", OnSuccess = "window.location.reload(true)"})
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.Id)
        </td>
    </tr>
}

</table>
