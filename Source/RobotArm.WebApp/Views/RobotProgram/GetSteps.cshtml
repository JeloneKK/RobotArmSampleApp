@model RobotArm.WebApp.ViewModels.RobotArmControl.RobotProgramViewModel

@{
    ViewBag.Title = "Steps";
}

<h2>Steps</h2>

<h3>Program: @Model.Name</h3>

<p>
    @Html.ActionLink("Create New", "CreateStep", new { programId = Model.Id })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramSteps[0].Step)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ProgramSteps) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Step.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditStep", new { stepId = item.Id }) |
                @Html.ActionLink("Points", "GetPoints", new { stepId = item.Id }) |
                @* TODO: It should rather be done is separeted .js file  *@
                @Ajax.ActionLink("Delete", "DeleteStep", new { stepId = item.Id }, new AjaxOptions { HttpMethod = "POST", OnSuccess = "window.location.reload(true)" })
            </td>
        </tr>
    }
    

</table>

<div>
    @Html.ActionLink("Back to Program", "Get")
</div>
