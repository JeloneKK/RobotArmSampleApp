@model RobotArm.WebApp.ViewModels.RobotArmControl.RobotProgramViewModel

@{
    ViewBag.Title = "Steps";
}

<h2>Steps</h2>

<div>
    Program: @Model.Name
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramSteps[0].Step)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ProgramSteps) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Step.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { stepId = item.Id }) |
            @Html.ActionLink("Points", "GetPoints", new { stepId = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { stepId = item.Id })
        </td>
    </tr>
}

</table>
